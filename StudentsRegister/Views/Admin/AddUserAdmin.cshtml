@model StudentsRegister.Models.Admin.AddUserAdminModel

@{
    ViewBag.Title = "Admin";

    AjaxOptions ajaxOptions = new AjaxOptions()
    {
        OnFailure = "adminScripts.setAddUserErrorMessageVisible();",
        OnSuccess = "adminScripts.setAddUserSuccessMessageVisible();",
    };
}

<div class="navbar navbar-default">
    <div class="container-fluid">

        <ul class="nav navbar-nav">
            <li class="active">
                <a href="#">
                    Add a user
                </a>
            </li>
        </ul>

    </div>
</div>

<div>
    <div class="alert alert-danger" id="register-error-admin-div" role="alert">
        <strong>Error!</strong> Such email already exist.
    </div>
    <div class="alert alert-success" id="register-success-admin-div" role="alert">
        <strong>Success!</strong> Successfully added a user.
    </div>

    @using (Ajax.BeginForm("RegisterUser", "Register", ajaxOptions))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Enter email" })
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.FirstName)
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "Enter firstname" })
            @Html.ValidationMessageFor(x => x.FirstName)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.LastName)
            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "Enter lastname" })
            @Html.ValidationMessageFor(x => x.LastName)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Password)
            @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Enter password" })
            @Html.ValidationMessageFor(x => x.Password)
        </div>

        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    }
</div>

@section CustomScripts
{
    <script src="~/TypeScript/admin-scripts.js"></script>
}