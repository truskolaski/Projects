@model StudentsRegister.Models.Home.HomeModel

@{
    ViewBag.Title = "Logged in user";
}

<div class="navbar navbar-default">
    <div class="container-fluid">
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="active">
                    <a href="#">
                        My marks
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div>
    @foreach (var item in Model.GroupedMarks)
    {
        <p>
            @item.SubjectName
        </p>

        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <th>
                        Mark
                    </th>
                </tr>
                @foreach (var mark in item.Marks)
                {
                    <tr class="@mark.Color">
                        <td>@mark.Mark</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>